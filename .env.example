# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/transcendence_db"
POSTGRES_DB=transcendence_db
POSTGRES_USER=username
POSTGRES_PASSWORD=password

# JWT & Authentication
JWT_SECRET="your-super-secret-jwt-key-here-change-this-in-production"
JWT_EXPIRES_IN=7d
SESSION_SECRET="your-session-secret-key-here-change-this-too"

# Two-Factor Authentication
TOTP_SERVICE_NAME="ft_transcendence"
TOTP_ISSUER="42 School"

# Application Configuration
NODE_ENV=development
PORT=3000
BACKEND_PORT=3001
FRONTEND_URL=https://localhost
BACKEND_URL=https://localhost:3001

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/localhost.crt
SSL_KEY_PATH=/etc/ssl/private/localhost.key

# Redis (for sessions/caching)
REDIS_URL=redis://localhost:6379

# External Services (for bonus modules)
# OAuth Configuration (if implementing remote auth)
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret

# Blockchain Configuration (if implementing blockchain scores)
BLOCKCHAIN_NETWORK=localhost
BLOCKCHAIN_CONTRACT_ADDRESS=0x...

# Monitoring & Logging (if implementing logging module)
LOG_LEVEL=debug
MONITORING_ENDPOINT=http://localhost:8080

# Game Configuration
GAME_TICK_RATE=60
MAX_PLAYERS_PER_TOURNAMENT=16
GAME_TIMEOUT_SECONDS=300

# Security
CORS_ORIGINS=https://localhost,https://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Docker Development
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1